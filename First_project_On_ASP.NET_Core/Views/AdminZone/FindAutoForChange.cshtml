@model List<Shop.Data.Models.Car>

<link href="/css/ChangeInfoAuto_style.css" rel="stylesheet" /> @* стилі з зміни авто *@

<div class="form-container">
    <div class="form-group">
        <label for="name">Назва автомобіля</label>
        <input type="text" class="form-control" id="name" name="name"  required />
    </div>

    <div class="form-group">
        <label for="price">Ціна</label>
        <input type="number" class="form-control" id="price" name="price" value="price" required />
    </div>

    <div class="form-group checkbox-group">
        <label for="isFavourite">Вибраний</label>
        <input type="checkbox" class="form-check-input" id="isFavourite" name="isFavourite" isFavourite ? "checked" : "" />
    </div>

    <div class="form-group checkbox-group">
        <label for="available">Доступний</label>
        <input type="checkbox" class="form-check-input" id="available" name="available" available ? "checked" : "" />
    </div>

    <div class="form-group">
        <label for="categoryID">Категорія</label>
        <select class="form-control" id="categoryID" name="categoryID" required>
            @* Додай категорії з ViewBag, коли треба *@
        </select>
    </div>

    <form asp-action="FindAutoForChange" asp-controller="AdminZone" method="Post">
        <button type="submit" class="btn-primary">Знайти автомобіль</button>
    </form>
</div>

<div>

    @{
        if(Model != null)
        {
            @foreach (var item in Model)
            {
                        <div class=""> /* нада додати клас form-container*/
                            <div class="form-group">
                                <label for="name">Назва автомобіля</label>
                                <input type="text" class="form-control" id="name" name="name" value="@item.name" required />
                            </div>

                            <div class="form-group">
                                <label for="price">Ціна</label>
                                <input type="number" class="form-control" id="price" name="price" value="@item.price" required />
                            </div>

                            <div class="form-group checkbox-group">
                                <label for="isFavourite">Вибраний</label>
                                <input type="checkbox" class="form-check-input" id="isFavourite" name="isFavourite" @(item.isFavourite ? "checked" : "") />
                            </div>

                            <div class="form-group checkbox-group">
                                <label for="available">Доступний</label>
                                <input type="checkbox" class="form-check-input" id="available" name="available" @(item.available ? "checked" : "") />
                            </div>

                            <div class="form-group">
                                <label for="categoryID">Категорія</label>
                                <input type="number" class="form-control" id="price" name="price" value="@item.category" required />
                            </div>
                        </div>
            }
        }
        

    }
</div>