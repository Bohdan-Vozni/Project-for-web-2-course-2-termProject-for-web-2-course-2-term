@model Order 

<div class="row">
    <h3>Оформлення замовлення</h3>

    

    <form asp-action="Checkout" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="name"></label>
            <div class="col-md-5">
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>

            <label asp-for="surname"></label>
            <div class="col-md-5">
                <input asp-for="surname" class="form-control" />
                <span asp-validation-for="surname" class="text-danger"></span>
            </div>

            <label asp-for="adress"></label>
            <div class="col-md-5">
                <input asp-for="adress" class="form-control" />
                <span asp-validation-for="adress" class="text-danger"></span>
            </div>

            <label asp-for="phone"></label>
            <div class="col-md-5">
                <input asp-for="phone" class="form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>

            <label asp-for="email"></label>
            <div class="col-md-5">
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <!-- Додаємо кнопку для відправки -->
            <div class="col-md-5 mt-3">
                <input class="btn btn-success" type="submit" value="Завершити замовлення" />
            </div>


        </div>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
            <div class="alert alert-danger">
            <p>Неможливо оформити замовлення ваша корзина пуста</p>
            </div>
    }
</div>
