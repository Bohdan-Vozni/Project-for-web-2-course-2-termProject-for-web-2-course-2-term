@model ShopCartViewModel

<link rel="stylesheet" href="~/css/shop_style.css" />

<div class="cart-container">
    @foreach (var el in Model.shopCart.listShopItems)
    {
        <div class="cart-item animate-fade-in">
            <h4>🚗 @el.car.name</h4>
            <p><strong>Ціна:</strong> @el.car.price.ToString("c")</p>
        </div>
    }

    <hr class="divider" />

    <div class="checkout-container">
        <form asp-controller="Order" asp-action="Checkout" method="Post">
            <button type="submit" class="checkout-button">Оплатити</button>
        </form>
    </div>
</div>
