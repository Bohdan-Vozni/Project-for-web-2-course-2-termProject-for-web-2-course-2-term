@model Shop.Data.Models.Car

<div class="content">
    
    <img width="70%" src="@Model.img" class="img-thumbnail" alt="@Model.name"/>
    <h2> Модель: @Model.name</h2> 
    <p>@Model.shortDesc</p>
    <p>Ціна: @Model.price.ToString("c")</p> 
    <p> <a class="btn btn-warning" asp-controller="ShopCart" asp-action="addToCart"  asp-route-id = "@Model.id">Добавити в корзину</a> </p>

</div> 