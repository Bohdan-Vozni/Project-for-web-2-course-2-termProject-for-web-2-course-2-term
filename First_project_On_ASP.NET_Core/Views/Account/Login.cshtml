<!-- Views/Account/Login.cshtml -->
@model User

<link rel="stylesheet" href="~/css/loginInSite.css" tyte = "text/css"/>

<div class="login-container">
    <div class="login-box">
        <h2>Вхід</h2>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="login">Логін</label>
                <input asp-for="login" class="form-control form-controlLogin" placeholder="Введіть ваш логін" />
                <span asp-validation-for="login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password">Пароль</label>
                <input asp-for="password" type="password" class="form-control form-controlLogin" placeholder="Введіть ваш пароль" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btnLogin">Увійти</button>
        </form>
        <form asp-action="SignUp"  asp-controller="Account" method="Get">
            <button type="submit" class="btn btnLogin">Зареєструватися</button>
        </form>
    </div>
</div>
